<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntermediateQuizFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvQns"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="This is Actvity Intermediate Quiz" />

        <RadioGroup
            android:id="@+id/rg_choice"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="7">

            <RadioButton
                android:id="@+id/rb_choice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rb_choice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rb_choice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rb_choice4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

        </RadioGroup>

        <Button
            android:id="@+id/btn_next_intermediate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/toolbar_font"
            android:textSize="21sp" />
    </LinearLayout>

</FrameLayout>